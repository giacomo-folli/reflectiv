modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SvelteKit Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Setup SvelteKit"

[[workflows.workflow]]
name = "SvelteKit Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Setup SvelteKit"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx create-svelte@latest my-app --template skeleton"

[deployment]
run = ["sh", "-c", "npm run dev"]

[[ports]]
localPort = 5000
externalPort = 80
